l=[[0 for i in range(TABLESIZE)] for j in range(TABLESIZE)]

        
class Tile:
    def __init__(self, x, y):
        self.x = x
        self.y = y
        self._where_is = None
        
    def where_is(self):
        if self.x < self.y and self.x + self.y < TABLESIZE:
            return (-1, 0)
        elif self.x < self.y and self.x + self.y > TABLESIZE:
            return (0, 1)
        elif self.x > self.y and self.x + self.y < TABLESIZE:
            return (1, 0)
        elif self.x > self.y and self.x + self.y > TABLESIZE:
            return (0, -1)
        else:
            return (0, 0)
        

class Token(Tile):
    cross = 1
    circle = 2
    def __init__(self, x, y, sign):
        super().__init__(x, y)
        self.sign = sign            

    def move(self):
        move_by = self.where_is()
        self.x += move_by[0]
        self.y += move_by[1]

class Square(Tile):
    empty = 0
    cross = 1
    circle = 2
    def __init__(self):
        super().__init__(x, y)
        self.sign = empty
                
        
